import java.io.*;
import java.util.*;
class rec
{
public static void main(String args[])
{
int maxtimes;
char symbol;
Scanner s = new Scanner(System.in);
System.out.println("enter max times to be printed:");
maxtimes = s.nextInt();
System.out.println("enter the character to print:");
symbol = s.next().charAt(0);
for(int i=1;i<=maxtimes;i++)
{
for(int j=1;j<=i;j++)
{
System.out.print(symbol+ " ");
}
System.out.println();
}
}
}
